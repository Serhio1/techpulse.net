                  </form>
                <li>    
              </ul>
	    </div>
          </div>
        </div>
      </nav>
        
        
        
      <div id="admin-panel"></div>
        
      <div class="container">  
        <header>
          {% image '@SiteBlogBundle/Resources/public/images/symfony_ss.png' %}
            <img src="{{ asset_url }}" alt="img" />
          {% endimage %}
        </header>
          
           
          
          
          
        <div class="row-fluid">
          {% block main %}  
          {% endblock main %}
          {% block sidebar %}
          <aside class="span3">
            <p>Последние статьи:</p>  
            <ul class="unstyled">  
            {% for lastArticle in sidebarData.lastArticles %}
              <li><a href="{{path('single_post',{'id':lastArticle.id})}}">{{lastArticle.title}}</a></li>
            {% endfor %} 
            </ul> 
            <hr>
            <p>Лучшее:</p>
            <ul class="unstyled">  
            {% for article in sidebarData.mostViewed %}
              <li><a href="{{path('single_post',{'id':article.id})}}">{{article.title}}</a></li>
            {% endfor %} 
            </ul> 
            <hr>
            <p>Комментарии:</p>
            <ul class="unstyled">  
            {% for comment in sidebarData.guestComments %}
              <li><a href="{{path('guestbook')}}">{{comment.text}}</a></li>
            {% endfor %} 
            </ul>
            
            
            <ul id="AjEMenu">
              <li><a href="{{path('guestbook')}}">Action1</a></li>
              <li><a href="{{path('add_post')}}">Action2</a></li>
              <li><a href="{{path('single_post',{id:'123'})}}">Action3</a></li>
          </ul> 
          
            
            
            
            
          </aside>
          {% endblock sidebar %}
        </div> 
          
           
         
           
            
      </div>  
        
      <footer>
        <div class="container">
          <p class="text-muted">Place sticky footer content here.</p>
        </div>
      </footer>    
    
      
      
      <script src="{{asset('bundles/siteblog/js/bootstrap.js')}}"></script>
      <script src="{{asset('bundles/siteblog/js/jquery.tagsinput.js')}}"></script>
      <script src="{{asset('bundles/siteblog/js/jqcloud.min.js')}}"></script>
      
