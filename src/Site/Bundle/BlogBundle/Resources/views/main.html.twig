<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>TechPulse</title>
        {% stylesheets 'bundles/siteblog/css/*' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
        
        <script src="{{asset('bundles/siteblog/js/jquery.js')}}"></script>
        <script src="{{asset('bundles/siteblog/js/ajaxEngine.js')}}"></script>
        <script src="{{asset('bundles/siteblog/js/AjEPaginator.js')}}"></script>
        <script src="{{asset('bundles/siteblog/js/AjEMenu.js')}}"></script>
        
    </head>
    <body>
        
        

    
    
          
 
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-inner">
          <div class="container"> 
            <a class="brand" href="{{path('homepage')}}">TechPulse</a>
            <div class="nav-collapse">
              <ul class="nav">
                <li><a href="{{path('homepage')}}">Главная</a></li>
                <li> <a href="{{path('guestbook')}}">Гостевая книга</a></li>
              </ul>
