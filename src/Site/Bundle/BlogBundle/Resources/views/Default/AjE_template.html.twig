
<div>
{% for post in posts %}
<ul class="unstyled post">
  <li>
    <ul class="tags">
      {% for tag in post.tags %}  
        <li>{{tag.name}}</li>
      {% endfor %}
    </ul>
  </li>
  <li class="title"><a href="{{path('single_post',{'id':post.id})}}"><h3>{{post.title}}</h3></a></li>
  <li class="text">{{post.text}}</li>
</ul>
<hr>
{% endfor %}
</div>





